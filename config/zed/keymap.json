// Simple keybindings for Zed that make it easy to use
[
  {
    // Global Keybindings
    "bindings": {
      // 💻 Terminal
      "alt-tab": "workspace::ToggleBottomDock",
      "cmd-t": "workspace::NewTerminal",
      // 🗂 Docks (Files, AI Chat)
      "cmd-1": "workspace::ToggleLeftDock",
      "cmd-2": "workspace::ToggleRightDock",
      "shift shift": "file_finder::Toggle",
      "cmd-s": "task::Spawn",
      // ⚙️ Settings
      "cmd-.": "zed::OpenKeymap",
      "cmd-alt-.": "zed::OpenDefaultKeymap",
      "cmd-,": "zed::OpenSettings",
      "cmd-alt-,": "zed::OpenDefaultSettings",
      // ⬅️ Window ➡️
      "cmd-alt-left": "pane::ActivatePreviousItem",
      "cmd-alt-right": "pane::ActivateNextItem",
      // 🤖 AI Assistant
      "cmd-k": "assistant::InlineAssist",
      "cmd-3": "assistant::QuoteSelection"
    }
  }
]
